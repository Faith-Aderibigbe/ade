$(".btn-transparent").click(function() {
    var vl=$(this).attr("href");
    if(vl.includes("#")){
    $('html, body').animate({
        scrollTop: $(vl).offset().top
    }, 1000);      
    }
});
$(window).scroll(function() {
  var scrollPercent = 100 * $(window).scrollTop() / ($(document).height() - $(window).height());
    $('.bar-long').css('width', scrollPercent +"%"  );
});

</script>
